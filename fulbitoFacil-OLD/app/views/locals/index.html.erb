<h1>Listing locals</h1>

<table>
  <tr>
    <th>Nombre local</th>
    <th>Direccion</th>
    <th>Distrito</th>
    <th>Direccion maps</th>
    <th>Telefono</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locals.each do |local| %>
  <tr>
    <td><%= local.Nombre_local %></td>
    <td><%= local.direccion %></td>
    <td><%= local.distrito %></td>
    <td><%= local.direccion_maps %></td>
    <td><%= local.telefono %></td>
    <td><%= link_to 'Show', local %></td>
    <td><%= link_to 'Edit', edit_local_path(local) %></td>
    <td><%= link_to 'Destroy', local, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

